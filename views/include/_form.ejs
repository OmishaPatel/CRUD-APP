<!--Form-->
<form action="/api/shows" method="POST" id="add_show">
    <div class="new_show">
        <div class="form-group">
           <label for="name" class="text-light">Name</label>
           <input type="hidden" name="id" value="">
           <input type="text" name="name" placeholder="Sherlock" required> 
        </div>
        <div class="form-group">
            <label for="source" class="text-light">Source</label>
            <input type="text" name="source" placeholder="Netflix" required> 
        </div>
        <div class="form-group">
            <label for="season" class="text-light">Season</label>
            <input type="number" name="season" placeholder="1" required> 
        </div>
        <div class="form-group">
            <label for="status" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" name="status" id="radio-2" value="Ongoing">
                <label for="radio-2" class="radio-label">Ongoing</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="status" value="completed">
                <label for="radio-3" class="radio-label">Completed</label>
            </div>      
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Submit</button> 
        </div>
    </div>
</form>
<!--Form-->